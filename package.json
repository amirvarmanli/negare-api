{
  "name": "negare-api",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22 <23"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "clean": "node -e \"const fs=require('fs');['dist','dist/tsconfig.tsbuildinfo','dist/apps/api/tsconfig.tsbuildinfo'].forEach(p=>{try{fs.rmSync(p,{recursive:true,force:true})}catch{}}); console.log('[clean] ok')\"",
    "prisma:gen": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema prisma/schema.prisma --skip-seed",
    "prisma:migrate:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --force --skip-seed --schema prisma/schema.prisma",
    "prisma:studio": "prisma studio",
    "tsc:build": "tsc -p tsconfig.json",
    "postbuild": "tsc-alias -p tsconfig.json",
    "build": "npm run clean && npm run prisma:gen && npm run tsc:build && npm run postbuild",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/apps/api/src/main.js",
    "start:dev": "nest start api --watch",
    "start:debug": "nest start api --debug --watch",
    "start:prod": "node dist/apps/api/src/main.js",
    "start:prod:with-migrate": "npm run prisma:migrate:deploy && npm run start",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint \"{apps/api/src,apps/api/test,test}/**/*.ts\" --fix",
    "format": "prettier --write \"apps/api/src/**/*.{ts,tsx,json,md}\" \"apps/api/test/**/*.ts\" \"scripts/**/*.ts\"",
    "docs:openapi": "node ./scripts/export-openapi.js",
    "compose:up": "docker compose up --build",
    "compose:down": "docker compose down -v",
    "compose:logs": "docker compose logs -f api",
    "postinstall": "node -e \"console.log('skip prisma generate on postinstall (Liara)')\""
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.8",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.1.8",
    "@prisma/client": "^6.19.0",
    "basic-ftp": "^5.0.5",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.1",
    "file-type": "^21.0.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "kavenegar": "^1.1.4",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "prisma": "^6.19.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/kavenegar": "^1.1.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.19.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.7.0",
    "pg-mem": "^3.0.5",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
