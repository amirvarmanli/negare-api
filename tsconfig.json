{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },
  "include": [
    "apps/api/src/**/*.ts",
    "apps/api/test/**/*.ts",
    "apps/api/src/tests/**/*.ts",
    "libs/shared/src/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist",
    ".next",
    "coverage"
  ]
}
