{
  "info": {
    "name": "Negare API - Commerce",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000/api" },
    { "key": "accessToken", "value": "" },
    { "key": "productId", "value": "" },
    { "key": "cartId", "value": "" },
    { "key": "paymentId", "value": "" },
    { "key": "trackId", "value": "" },
    { "key": "subscriptionPlanId", "value": "" },
    { "key": "subscriptionPurchaseId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"user@example.com\",\n  \"password\": \"password\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "if (json && json.accessToken) { pm.collectionVariables.set('accessToken', json.accessToken); }"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/cart", "host": ["{{baseUrl}}"], "path": ["cart"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "if (json && json.cartId) { pm.collectionVariables.set('cartId', json.cartId); }"
                ]
              }
            }
          ]
        },
        {
          "name": "Add Cart Item",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/cart/items", "host": ["{{baseUrl}}"], "path": ["cart", "items"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"qty\": 1\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "if (json && json.cartId) { pm.collectionVariables.set('cartId', json.cartId); }"
                ]
              }
            }
          ]
        },
        {
          "name": "Remove Cart Item",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart/items/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "items", "{{productId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Wallet",
      "item": [
        {
          "name": "Get Wallet",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/wallet", "host": ["{{baseUrl}}"], "path": ["wallet"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Charge Wallet",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/wallet/charge", "host": ["{{baseUrl}}"], "path": ["wallet", "charge"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 200000\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "if (json && json.paymentId) { pm.collectionVariables.set('paymentId', json.paymentId); }",
                  "if (json && json.trackId) { pm.collectionVariables.set('trackId', json.trackId); }"
                ]
              }
            }
          ]
        },
        {
          "name": "Wallet Pay",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/wallet/pay", "host": ["{{baseUrl}}"], "path": ["wallet", "pay"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refType\": \"cart\",\n  \"refId\": \"{{cartId}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Start Payment (Cart)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/payments/start", "host": ["{{baseUrl}}"], "path": ["payments", "start"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refType\": \"cart\",\n  \"refId\": \"{{cartId}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "if (json && json.paymentId) { pm.collectionVariables.set('paymentId', json.paymentId); }",
                  "if (json && json.trackId) { pm.collectionVariables.set('trackId', json.trackId); }"
                ]
              }
            }
          ]
        },
        {
          "name": "Payment Callback (Verify)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/payments/callback?trackId={{trackId}}",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "callback"],
              "query": [{ "key": "trackId", "value": "{{trackId}}" }]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200/302', function () { pm.expect([200, 302]).to.include(pm.response.code); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Verify Payment Status",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/payments/verify", "host": ["{{baseUrl}}"], "path": ["payments", "verify"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentId\": \"{{paymentId}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Subscriptions",
      "item": [
        {
          "name": "List Plans",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/subscription/plans", "host": ["{{baseUrl}}"], "path": ["subscription", "plans"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Purchase Subscription",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/subscriptions/purchase", "host": ["{{baseUrl}}"], "path": ["subscriptions", "purchase"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planId\": \"{{subscriptionPlanId}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "if (json && json.purchaseId) { pm.collectionVariables.set('subscriptionPurchaseId', json.purchaseId); }"
                ]
              }
            }
          ]
        },
        {
          "name": "Start Payment (Subscription)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/payments/start", "host": ["{{baseUrl}}"], "path": ["payments", "start"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refType\": \"subscription\",\n  \"refId\": \"{{subscriptionPurchaseId}}\"\n}"
            }
          }
        }
      ]
    }
  ]
}
