# --- Application ---
PORT=4000
NODE_ENV=development
GLOBAL_PREFIX=api
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000
API_PUBLIC_BASE_URL=http://localhost:4000/api
API_BASE_URL=

# --- Database (local) ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/negare_db

# --- Database (use inside Docker) ---
# Use this when the API is talking directly to the compose postgres service.
DATABASE_URL_DOCKER=postgresql://postgres:postgres@db:5432/negare_db

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=negare_db

# --- Redis ---
REDIS_URL=redis://redis:6379

# --- SMTP / Mail ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM="Negare <no-reply@example.com>"

# --- Zibal payment gateway ---
ZIBAL_MERCHANT=
ZIBAL_BASE_URL=https://gateway.zibal.ir
ZIBAL_CALLBACK_URL=http://localhost:3000/payments/zibal/callback

# --- Docker helpers ---
RUN_SEED=false
